<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Demie Yoe</title>
  <!-- HTML -->
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/ionicons.min.css" />
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <% if (errorMessage)  { %> 
    <div class="alert error">
      <p>Invalid Email or Password</p>
    </div>
<% } %> 
  <!-- Header Section -->
    <div class="not-home">
      
    
    <nav class="nav">
      <a class="nav_logo" href="#">
        Demie Yoe
      </a>
      <div class="nav_menu">
        <a class="nav_links" href="#">
          About
        </a>
        <a class="nav_links" href="#">
          Contact
        </a>
        <!-- <a class="nav_btn" href="#">
          Sign Up
        </a> -->
        <a class="nav_btn" href="/login">
          Login
        </a>
      </div>
    </nav>

  </div>
  <section class="form-section login">
    <form class="form" action="/login" method="POST" accept-charset="utf-8">
      <h4 class="form-head">Login</h4>
     <div class="form-group">
        <input name="email" type="text" placeholder="Email" value="<%= errorMessage ? oldData.email : ""%>"  required />
      </div>
      <div class="form-group">
        <input name="password" type="password" placeholder="Password" value="<%= errorMessage ? oldData.password : ""%>" required />
      </div>
      
      <div class="form-group">
        <button class="form-btn" type="submit">Log in</button>
      </div>
      <a class="form-link forget-pass" href="#">Forgot Password</a>
      <p class="form-text">
        <span>Don't have an account?   </span>
        <a class="form-link" href="#">Register</a>
      </p>
    </form>
  </section>
  <footer class="footer">
    &copy; The Federal Polytechnic Ilaro P.M.B 50
    <script type="text/javascript" charset="utf-8">
      const d = new Date()
      const year = d.getFullYear()
      document.write(year)
    </script>
  </footer>
  <!-- Project -->
  <script src="main.js"></script>
</body>

</html>